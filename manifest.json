{
  "manifest_version": 3,
  "name": "üõ°Ô∏è SafeWeb Pro - –ë–µ–∑–æ–ø–∞—Å–Ω—ã–π –±—Ä–∞—É–∑–∏–Ω–≥",
  "version": "2.0.2",
  "description": "–ó–∞—â–∏—Ç–∞ –ø—Ä–∏ —Å–µ—Ä—Ñ–∏–Ω–≥–µ —Å –±–∞–∑–æ–π –ø—Ä–æ–≤–µ—Ä–µ–Ω–Ω—ã—Ö —Å–∞–π—Ç–æ–≤",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
